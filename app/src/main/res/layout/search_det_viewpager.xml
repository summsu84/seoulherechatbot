<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageCount"
        android:text="hello"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="72dp" />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/imagePager"
        android:background="@drawable/img_no_photo"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imagePager"
        android:layout_alignBottom="@+id/imagePager"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_image_description"
        android:id="@+id/txtViewPagerImgDesc"
        android:textSize="18dp"
        android:textColor="@color/main_desc"
        />

</RelativeLayout>